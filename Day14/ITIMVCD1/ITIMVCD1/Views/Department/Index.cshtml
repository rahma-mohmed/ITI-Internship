@model IEnumerable<Department>
@{
    ViewBag.Title = "Department";
}

<h1>Department List</h1>
<div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">There is No Data</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a asp-action="Details" asp-controller="Department" asp-route-deptid="@item.Id" class="btn btn-info">Details</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Update" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                                <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @if (User.IsInRole("Admin"))
    {
        <a href="\Department\Create\#about" class="btn btn-primary">Add To List</a>
    }
</div>
