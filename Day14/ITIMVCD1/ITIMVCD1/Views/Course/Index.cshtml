@model IEnumerable<ITIMVCD1.Models.Course>

@{
    ViewBag.Title = "Course List";
}

<h1>Course List</h1>

<div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Duration</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3">There is No Data</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Duration</td>
                        <td>
                            <a asp-action="Details" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Update" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                                <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @if (User.IsInRole("Admin"))
    {
        <a href="\Course\Create\#about" class="btn btn-primary">Add To List</a>
    }
</div>

