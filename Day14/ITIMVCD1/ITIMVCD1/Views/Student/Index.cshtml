@model IEnumerable<ITIMVCD1.Models.Student>

@{
    ViewBag.Title = "Student";
}

<h1>Student List</h1>

<div>
     <table class="table table-bordered table-hover">
         <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
         </thead>
         <tbody>
            @if(Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">There is No Data</td>
                </tr>
            }
            else
            {
                foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Department.Name</td>
                        <td>
                            <a asp-action="Details" asp-controller="Student" asp-route-stdid="@item.Id" class="btn btn-info">Details</a>

                            @if (User.IsInRole("Admin")){
                                <a asp-action="Update" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                                <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
     </table>
    @if (User.IsInRole("Admin")){
        <a href="\Student\Create\#about" class="btn btn-primary">Add To List</a>
    }
</div>

