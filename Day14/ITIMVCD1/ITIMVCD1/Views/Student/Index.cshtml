@model IEnumerable<ITIMVCD1.Models.Student>

<h1>Student List:</h1>

<div>
     <table class="table table-bordered table-hover">
         <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
         </thead>
         <tbody>
            @if(Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">There is No Data</td>
                </tr>
            }
            else
            {
                foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Department.Name</td>
                        <td>
                            <a asp-action="Details" asp-controller="Student" asp-route-stdid="@item.Id">Details</a>
                            <a asp-action="Update" asp-controller="Student" asp-route-id="@item.Id">| Update</a>
                            <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id">| Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
     </table>
     <a href="\Student\Create" class="btn btn-primary">Add To List</a>
</div>
